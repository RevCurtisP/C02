  putln(&s);
}

void chkerr() {
  if (err) {
    printf(err, "ERROR %d - ");
    ferror(0, m); putln(m);
  }
  else if (r) putln("FAILED");
  else putln("SUCCESS");
}

void chgdir(aa, yy, xx) {
  setdst(); printf("CHDIR '%s': ");
  n, err = chdir(0,yy,xx); chkerr();
  prtcwd();
}

void mrdir() {
  setdst(&dir); printf("MKDIR(\"%s\"): ");
  r,err = mkdir(&dir); chkerr();
  chgdir(&dir);
  anykey();
  chgdir("..");
  setdst(&dir); printf("RMDIR(\"%s\"): ");
  r,err = rmdir(&dir); chkerr();
}

