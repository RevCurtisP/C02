void prtbfr() {
  for (n=0; n<#SYSBFL; n++) {
    c = sysbfr[n];  
    select (c) {
      case 0: putc('@');
      default: if (c < ' ') putc('.'); 
               else putc(c);}
  }
  newlin();
}

main:
  r,p = setarg();
  if (r) {putln("NO ARGS"); goto exit;}

  putln("ARGS");
  n = 0; 
  while () {
    setsrc(p); p = strget(arg);
    if (arg[0] == 0) break;
    setdst(arg); printf(n, "%d %s%n");
    n++;
  }
  
goto exit;

